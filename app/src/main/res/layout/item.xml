<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_gravity="center"
                                    android:layout_margin="15dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp"
                                    android:id="@+id/card"
                                    app:cardBackgroundColor="#34a853"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/card_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ordem de serviço"
                android:textSize="30sp"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/card_textoOrdem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="128472784"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/card_titulo"
                app:layout_constraintTop_toBottomOf="@+id/card_titulo"
                android:visibility="invisible"
        />

        <TextView
                android:id="@+id/card_textoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Yan Vitor"
                android:textColor="#ffffff"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/card_textoTipo" />

        <TextView
                android:id="@+id/card_textoTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="44dp"
                android:textColor="#ffffff"
                android:text="Formatação"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/card_titulo" />

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="75dp"
                android:src="@drawable/ic_my_location_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
                android:id="@+id/card_Btnmapa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/ic_map_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintCircleRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/card_textoOrdem" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>